{
    "manifest_version": 3,
    "name": "Vera",
    "version": "1.0",
    "description": "Verify selected text accuracy and provide trusted sources.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/16V.png",
            "48": "icons/48V.png",
            "128": "icons/128V.png"
        }
    },
    "web_accessible_resources": [
        {
          "resources": ["categoryDictionary.json"],
          "matches": ["<all_urls>"]
        }
      ]    
}
